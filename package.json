{
  "name": "md2wp-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript CLI tool and library for publishing markdown files to WordPress",
  "keywords": [
    "markdown",
    "wordpress",
    "publishing",
    "cli"
  ],
  "author": "Nicholas Hart <nickhart@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:run": "turbo run test --run",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test --coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "validate": "pnpm build && pnpm lint && pnpm format:check && pnpm typecheck && pnpm test:run",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish --provenance",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "link:cli": "cd packages/cli && pnpm link --global",
    "unlink:cli": "cd packages/cli && pnpm unlink --global",
    "cli": "node packages/cli/dist/cli.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.8.1",
    "turbo": "^2.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.4"
  }
}
