{
  "name": "@md2wp/cli",
  "version": "1.0.1",
  "description": "CLI tool for publishing markdown to WordPress",
  "keywords": [
    "markdown",
    "wordpress",
    "cli"
  ],
  "author": "Nicholas Hart <nickhart@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamNickHart/md2wp.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/TeamNickHart/md2wp/issues"
  },
  "homepage": "https://github.com/TeamNickHart/md2wp#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "md2wp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@md2wp/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
